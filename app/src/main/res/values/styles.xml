<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorControlActivated">@color/colorText</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="titleTextColor">@color/colorBackground</item>

        <item name="android:editTextStyle">@style/App_editTextStyle</item>
        <item name="android:buttonStyle">@style/App_ButtonStyle</item>
    </style>

    <style name="App_editTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="App_ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:background">@color/colorText</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:minWidth">64dip</item>
    </style>

</resources>
