<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorControlActivated">@color/colorText</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:fillColor">@color/colorText</item>
        <item name="titleTextColor">@color/colorBackground</item>
        <item name="android:editTextStyle">@style/App_editTextStyle</item>
        <item name="android:imageButtonStyle">@style/App_ImageButtonStyle</item>
    </style>

    <style name="App_editTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="App_ImageButtonStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:minWidth">64dip</item>
    </style>

    <style name="PurchaseLabels" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_std_half</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InventoryRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/margin_std_half</item>
    </style>

</resources>
